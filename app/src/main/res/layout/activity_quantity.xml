<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white"
    tools:context=".QuantityActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="40dp"
        app:cardCornerRadius="10dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/edittext_bg"

            >
            <ImageView
                android:id="@+id/quantityImage"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_margin="15dp"
                android:layout_marginBottom="20dp"
                />
            <TextView
                android:id="@+id/quantityName"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20dp"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="60dp"
        app:cardElevation="30dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="10dp"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
             android:gravity="center"
            android:background="@drawable/edittext_bg"
            >
            <TextView
                android:id="@+id/quantityPrice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"

                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        android:padding="10dp"
        >
        <ImageView
            android:id="@+id/decrement"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="10dp"
            android:src="@drawable/decrement"
            android:background="@drawable/edittext_bg"
            android:layout_marginRight="30dp"
            app:tint="@color/lightGreen" />

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="60dp"
            app:cardElevation="50dp"
            app:cardCornerRadius="10dp"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="10dp"
                android:background="@drawable/edittext_bg"
                >
                <TextView
                    android:id="@+id/quantityNumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" 0 "
                    android:gravity="center"
                    android:textStyle="bold|italic"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:background="@android:color/background_light"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/increment"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/increment"
            android:background="@drawable/edittext_bg"
            android:padding="10dp"
            android:layout_marginLeft="30dp"
            app:tint="@color/lightGreen" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        >
        <Button
            android:id="@+id/btnBack"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/lightGreen"
            android:text=" Back "
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginRight="30dp"
            />
        <Button
            android:id="@+id/addToCart"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:backgroundTint="@color/lightGreen"
            android:text=" Add To Cart "
            android:textSize="15dp"
            android:textStyle="bold"

            />

    </LinearLayout>
    <Button
        android:id="@+id/proceedToPayment"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:backgroundTint="@color/lightGreen"
        android:text=" Proceed To Payment "
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"

        />




</LinearLayout>